# =============================================================================
# Logis AI Candidate Engine - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Application Settings
# -----------------------------------------------------------------------------
APP_NAME="Logis AI Candidate Engine"
APP_VERSION="2.0.0"
ENVIRONMENT="development"  # Options: development, staging, production
DEBUG="true"  # Set to "false" in production

# Server Configuration
# -----------------------------------------------------------------------------
HOST="0.0.0.0"
PORT="8000"
WORKERS="4"  # Number of uvicorn workers (production only)

# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL="INFO"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="json"  # Options: json, text (use json in production)

# API Configuration
# -----------------------------------------------------------------------------
API_V1_PREFIX="/api/v1"
CORS_ORIGINS="http://localhost:3000,http://localhost:8000"  # Comma-separated
CORS_CREDENTIALS="true"
CORS_METHODS="*"
CORS_HEADERS="*"

# ML Model Configuration
# -----------------------------------------------------------------------------
# Sentence Transformers Model
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"
EMBEDDING_CACHE_DIR="./cache/embeddings"
MODEL_DEVICE="cpu"  # Options: cpu, cuda, mps

# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_SEMANTIC_MATCHING="true"
ENABLE_CONFIDENCE_METRICS="true"
ENABLE_EXPLAINABILITY="true"

# Performance
# -----------------------------------------------------------------------------
MAX_CV_SIZE_MB="5"
REQUEST_TIMEOUT_SECONDS="30"
MAX_CONCURRENT_REQUESTS="100"

# Database (if needed in future)
# -----------------------------------------------------------------------------
# DATABASE_URL="postgresql://user:password@localhost:5432/logis_ai"
# DATABASE_POOL_SIZE="10"

# Redis Cache (if needed in future)
# -----------------------------------------------------------------------------
# REDIS_URL="redis://localhost:6379/0"
# REDIS_TTL_SECONDS="3600"

# Monitoring & Observability
# -----------------------------------------------------------------------------
# SENTRY_DSN=""  # Sentry error tracking
# DATADOG_API_KEY=""  # Datadog APM
# PROMETHEUS_ENABLED="false"

# Security
# -----------------------------------------------------------------------------
# Service-to-Service Authentication
# Generate a secure token: python -c "import secrets; print(secrets.token_urlsafe(32))"
AI_ENGINE_API_TOKEN=""  # Required: Bearer token for DRF application authentication

# Legacy API Key Support (deprecated - use AI_ENGINE_API_TOKEN instead)
# API_KEY=""  # API key for authentication (if needed)
# JWT_SECRET=""  # JWT secret for token generation
# JWT_ALGORITHM="HS256"
# ACCESS_TOKEN_EXPIRE_MINUTES="30"

